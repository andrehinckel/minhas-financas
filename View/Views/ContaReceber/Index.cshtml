
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/ContaReceberIndex.css" />
</head>
<body>
    <div> 
        <h1>Lista de Contas a Receber</h1>
        <a href="/contareceber/cadastro">Nova Conta a Receber</a>
        <form action="/contareceber/index" method="get">
            <label for="campo-pesquisa">Pesquisa</label>
            <input type="text" id="campo-psquisa" name="pesquisa" />
        </form>
    </div>
        <table class="table">
            <thead>
                <tr>Id</tr>
                <tr>Nome</tr>
                <tr>Valor</tr>
                <tr>Tipo</tr>
                <tr>Descricao</tr>
                <tr>Status</tr>
            </thead>
            <tbody>
                <tr>
                    @for (int i = 0; i < ViewBag.ContasReceber.Count; i++)
                    {
                        <td>@ViewBag.ContasReceber[i].Id</td>
                        <td>@ViewBag.ContasReceber[i].Nome</td>
                        <td>@ViewBag.ContasReceber[i].Valor</td>
                        <td>@ViewBag.ContasReceber[i].Descricao</td>
                        <td>@ViewBag.ContasReceber[i].Status</td>
                        
                    }
                </tr>
            </tbody>
        </table>
</body>
</html>
