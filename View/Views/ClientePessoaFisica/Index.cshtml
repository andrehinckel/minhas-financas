
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/ClientePessoaFisica.css" />
</head>
<body>
    <div>
        <h1>Lista de Clientes(Pessoa Física)</h1>
        <a href="/clientepessoafisica/cadastro">Novo Cliente(Pessoa Fisica)</a>
        <form action="/clientepessoafisica/index" method="get">
            <label for="campo-pesquisa">Pesquisa</label>
            <input type="text" name="pesquisa" id="campo-pesquisa" />
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>Id</tr>
            <tr>Nome</tr>
            <tr>CPF</tr>
            <tr>Data Nascimento</tr>
            <tr>RG</tr>
            <tr>Sexo</tr>
            <tr>Ação</tr>
        </thead>

        <tbody>
            @for (int i = 0; i < ViewBag.ClientesPessoaFisica.Count; i++)
            {
                <tr>
                    <td>@ViewBag.ClientesPessoaFisica[i].Id</td>
                    <td>@ViewBag.ClientesPessoaFisica[i].Nome</td>
                    <td>@ViewBag.ClientesPessoaFisica[i].CPF</td>
                    <td>@ViewBag.ClientesPessoaFisica[i].DataNascimento</td>
                    <td>@ViewBag.ClientesPessoaFisica[i].RG</td>
                    <td>@ViewBag.ClientesPessoaFisica[i].Sexo</td>
                    <td>
                        <a href="/clientepessoafisica/editar?id=@ViewBag.ClientesPessoaFisica[i].Id">Editar</a>
                        <a href="/clientepessoafisica/delete?id=@ViewBag.ClientesPessoaFisica[i].Id">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
