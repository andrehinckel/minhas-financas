
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <form action="/contareceber/update" method="post">
        <label for="campo-nome">Nome</label>
        <input type="text" name="nome" id="campo-nome" value="@ViewBag.ContasReceber.Nome" />

        <label for="campo-valor">Valor</label>
        <input type="number" name="valor" id="campo-valor" value="@ViewBag.ContasReceber.Valor" />

        <label for="campo-tipo">Tipo</label>
        <input type="text" name="tipo" id="campo-tipo" value="@ViewBag.ContasReceber.Tipo" />

        <label for="campo-descricao">Descricao</label>
        <input type="text" name="descricao" id="campo-descricao" value="@ViewBag.ContasReceber.Descricao" />

        <label for="campo-status">Status</label>
        <select name="status" value="@ViewBag.ContasReceber.Status">
            <option value="Pendente">Pendente</option>
            <option value="Paga">Paga</option>
        </select>

        <input type="hidden" name="id" value="@ViewBag.ContaReceber.Id" />
        <button type="submit">Salvar</button>
    </form>
</body>
</html>
